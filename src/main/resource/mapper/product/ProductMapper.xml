<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.product">
    <resultMap id="productMap" type="Product">
        <id column="id" property="id" jdbcType="BIGINT" javaType="Long"/>
        <result column="product_name" property="productName"/>
        <result column="category_id" property="categoryId"/>
        <result column="supplier_id" property="supplierId"/>
        <result column="supply_price" property="supplyPrice"/>
        <result column="selling_price" property="sellingPrice"/>
        <result column="stock" property="stock" jdbcType="INTEGER"/>
    </resultMap>

<!--SELECT-->
    <select id="findAll" resultMap="productMap">
        SELECT *
        FROM product
    </select>

    <select id="findById" resultMap="productMap" parameterType="Long">
        SELECT id,product_name,category_id,supplier_id,supply_price,selling_price,stock
        FROM product
        WHERE id = #{id}
    </select>

    <select id="findByName" resultMap="productMap" parameterType="String">
        SELECT id,product_name,category_id,supplier_id,supply_price,selling_price,stock
        FROM product
        WHERE product_name LIKE CONCAT('%', #{productName}, '%')
    </select>

    <select id="findBySupplyName" resultMap="productMap" parameterType="String">
        SELECT id,product_name,category_id,supplier_id,supply_price,selling_price,stock
        FROM product
        WHERE product_name LIKE CONCAT('%', #{supplyName}, '%')
    </select>

<!--INSERT-->
    <insert id="insert" parameterType="Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (product_name,category_id,supplier_id,supply_price,selling_price,stock)
        VALUES (#{productName},#{categoryId},#{supplierId},#{supplyPrice},#{sellingPrice},#{stock})
    </insert>

    <insert id="insertList" parameterType="arraylist" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (product_name,category_id,supplier_id,supply_price,selling_price,stock)
        VALUES
        <foreach item="product" collection="list" separator=",">
            (#{product.productName},#{product.categoryId},#{product.supplierId},#{product.supplyPrice},#{product.sellingPrice},#{product.stock})
        </foreach>
    </insert>

    <select id="lastInsertId" parameterType="java.util.List" resultType="Long">
        <!-- Retrieve the generated IDs for all the inserted records -->
        SELECT LAST_INSERT_ID();
    </select>

<!--DELETE-->
    <delete id="delete" parameterType="Long" >
        DELETE FROM product
        WHERE id = #{id}
    </delete>

    <delete id="deleteList" parameterType="java.util.List">
        DELETE FROM product
        WHERE id IN
        <foreach item="productId" collection="list" open="(" separator="," close=")">
            #{productId}
        </foreach>
    </delete>

    <delete id="deleteAll" >
        DELETE FROM product
    </delete>

<!--UPDATE-->

</mapper>